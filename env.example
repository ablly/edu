# EduPilot 环境配置示例文件
# 复制此文件为 .env 并填入真实配置值

# ==================== Flask 配置 ====================
FLASK_APP=app.py
FLASK_ENV=production
# 生产环境请使用强随机字符串，可以用：python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here_please_change_this_to_random_string

# ==================== 数据库配置 ====================
# PostgreSQL 数据库连接（推荐用于生产环境）
DATABASE_URL=postgresql://edupilot_user:your_password@localhost:5432/edupilot_db

# SQLite 数据库（开发环境）
# DATABASE_URL=sqlite:///data/edupilot.db

# ==================== AI 服务配置 ====================
# 通义千问API配置
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# Kimi API配置
KIMI_API_KEY=your_kimi_api_key_here
KIMI_BASE_URL=https://api.moonshot.cn/v1

# 讯飞星火API配置
XUNFEI_APP_ID=your_xunfei_app_id_here
XUNFEI_API_KEY=your_xunfei_api_key_here
XUNFEI_API_SECRET=your_xunfei_api_secret_here

# ==================== 支付配置 ====================
# 支付宝配置
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_APP_PRIVATE_KEY_PATH=keys/alipay_private_key.txt
ALIPAY_PUBLIC_KEY_PATH=keys/alipay_public_key.txt
ALIPAY_GATEWAY=https://openapi.alipay.com/gateway.do

# 支付回调地址（请改为您的实际域名）
PAYMENT_RETURN_URL=http://your-domain.com/api/payment/alipay/return
PAYMENT_NOTIFY_URL=http://your-domain.com/api/payment/alipay/callback

# 订单超时时间（分钟）
PAYMENT_TIMEOUT=30

# ==================== 会员系统配置 ====================
# 免费用户每日限额
FREE_USER_DAILY_LIMIT_ANSWER=5
FREE_USER_DAILY_LIMIT_GENERATE_QUESTION=3
FREE_USER_DAILY_LIMIT_GENERATE_LECTURE=2
FREE_USER_DAILY_LIMIT_VIDEO_SUMMARY=2
FREE_USER_DAILY_LIMIT_CODE_ASSIST=10

# ==================== Redis 配置（可选）====================
REDIS_URL=redis://localhost:6379/0

# ==================== 邮件配置（可选）====================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password
MAIL_DEFAULT_SENDER=noreply@edupilot.com

# ==================== 安全配置 ====================
SESSION_COOKIE_SECURE=False  # 生产环境HTTPS请设为True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=2592000  # 30天

# ==================== 限流配置 ====================
RATELIMIT_DEFAULT=100 per hour
RATELIMIT_STORAGE_URL=memory://

# ==================== 应用配置 ====================
APP_NAME=EduPilot
APP_VERSION=2.0.0
DEBUG=False
