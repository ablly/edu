# ========================================
# EduPilot AI 环境配置示例
# ========================================
# 复制此文件为 .env 并填写实际配置值

# Flask配置
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False

# 数据库配置
DATABASE_URI=sqlite:///data/edupilot.db
# 生产环境建议使用MySQL/PostgreSQL:
# DATABASE_URI=mysql+pymysql://username:password@localhost:3306/edupilot
# DATABASE_URI=postgresql://username:password@localhost:5432/edupilot

# DeepSeek AI配置
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_BASE_URL=https://api.deepseek.com

# 上传文件配置
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=16777216

# 日志配置
LOG_LEVEL=INFO
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=False

# 限流配置
RATELIMIT_ENABLED=True
RATELIMIT_STORAGE_URL=memory://

# 邮件配置
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
ADMIN_EMAIL=admin@edupilot.com

# 支付配置
ALIPAY_APP_ID=your-alipay-app-id
WECHAT_APP_ID=your-wechat-app-id

# 安全配置
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
PERMANENT_SESSION_LIFETIME=86400


